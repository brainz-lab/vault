<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <title>Vault - <%= content_for(:title) || "Secrets Management" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="turbo-cache-control" content="no-cache">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%# Fonts %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600;8..60,700&display=swap" rel="stylesheet">

  <%# BrainzLab UI Design System %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <style>
    :root {
      /* Vault-specific brand colors */
      --color-vault: #EA580C;
      --color-vault-dark: #C2410C;
      --color-vault-light: #FB923C;
    }
  </style>

  <%# Google Analytics - only in production %>
  <% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CXHFR6PC8W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CXHFR6PC8W');
    </script>
  <% end %>
</head>
<body class="h-full antialiased" style="background: var(--color-cream-50);">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex flex-col" style="background: #fff; border-right: 1px solid var(--color-cream-200);">
      <div class="p-5" style="border-bottom: 1px solid var(--color-cream-200);">
        <%= link_to dashboard_projects_path, class: "flex items-center gap-2.5" do %>
          <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: var(--color-vault);">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2L4 5v6.09c0 5.05 3.41 9.76 8 10.91 4.59-1.15 8-5.86 8-10.91V5l-8-3z"/>
            </svg>
          </div>
          <span class="font-semibold" style="color: var(--color-ink-950);">Vault</span>
        <% end %>
      </div>

      <% if @current_project %>
        <!-- Project Selector -->
        <div class="px-4 py-3" style="border-bottom: 1px solid var(--color-cream-200);">
          <%= link_to dashboard_projects_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg transition", style: "color: var(--color-ink-700);" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: rgba(234, 88, 12, 0.15); color: var(--color-vault);">
              <%= @current_project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate"><%= @current_project.name %></span>
            <svg class="w-4 h-4" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <%= link_to dashboard_project_path(@current_project), class: nav_link_class('/overview') do %>
            <%= icon(:overview) %>
            Overview
          <% end %>

          <%= link_to dashboard_project_secrets_path(@current_project), class: nav_link_class('/secrets') do %>
            <%= icon(:secrets) %>
            Secrets
          <% end %>

          <%= link_to dashboard_project_environments_path(@current_project), class: nav_link_class('/environments') do %>
            <%= icon(:environments) %>
            Environments
          <% end %>

          <%= link_to dashboard_project_access_tokens_path(@current_project), class: nav_link_class('/access_tokens') do %>
            <%= icon(:access_tokens) %>
            Access Tokens
          <% end %>

          <%= link_to dashboard_project_audit_logs_path(@current_project), class: nav_link_class('/audit_logs') do %>
            <%= icon(:audit_logs) %>
            Audit Log
          <% end %>

          <div class="pt-4 mt-4" style="border-top: 1px solid var(--color-cream-200);">
            <%= link_to dashboard_provider_keys_path(project_id: @current_project&.id), class: nav_link_class('/provider_keys') do %>
              <%= icon(:provider_keys) %>
              Provider Keys
            <% end %>

            <%= link_to edit_dashboard_project_path(@current_project), class: nav_link_class('/project_settings') do %>
              <%= icon(:settings) %>
              Project Settings
            <% end %>

            <%= link_to mcp_setup_dashboard_project_path(@current_project), class: nav_link_class('/mcp_setup') do %>
              <%= icon(:mcp) %>
              MCP Setup
            <% end %>

            <%= link_to ssh_keys_dashboard_project_path(@current_project), class: nav_link_class('/ssh_keys') do %>
              <%= icon(:ssh_keys) %>
              SSH Keys
            <% end %>
          </div>
        </nav>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3" style="color: var(--color-ink-400);">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <% if defined?(current_user) && current_user && current_user[:email] %>
        <div class="p-4" style="border-top: 1px solid var(--color-cream-200);">
          <div class="flex items-center gap-3">
            <div class="avatar avatar-md avatar-primary">
              <%= current_user[:name]&.first&.upcase || current_user[:email]&.first&.upcase || "?" %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium truncate" style="color: var(--color-ink-900);"><%= current_user[:name] || current_user[:email]&.split('@')&.first || "User" %></p>
              <p class="text-xs truncate" style="color: var(--color-ink-500);"><%= current_user[:email] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto">
      <% if notice %>
        <div class="m-8 mb-0 alert alert-success">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 alert alert-error">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
