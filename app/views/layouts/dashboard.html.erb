<!DOCTYPE html>
<html lang="en" class="h-full" data-controller="dark-mode">
<head>
  <title>Vault - <%= content_for(:title) || "Secrets Management" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="color-scheme" content="light dark">
  <meta name="turbo-cache-control" content="no-cache">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%# Fonts %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600;8..60,700&display=swap" rel="stylesheet">

  <%# BrainzLab UI Design System %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "dark_mode", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <%# Prevent flash of wrong theme on page load and provide toggle function %>
  <script>
    (function() {
      const savedTheme = localStorage.getItem('brainzlab-theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.add('light');
      }

      // Vanilla JS dark mode toggle - works without Stimulus
      window.toggleDarkMode = function() {
        const html = document.documentElement;
        const isDark = html.classList.contains('dark');
        if (isDark) {
          html.classList.remove('dark');
          html.classList.add('light');
          localStorage.setItem('brainzlab-theme', 'light');
        } else {
          html.classList.remove('light');
          html.classList.add('dark');
          localStorage.setItem('brainzlab-theme', 'dark');
        }
        // Update icon if exists
        const icon = document.querySelector('[data-dark-mode-target="icon"]');
        if (icon) {
          icon.innerHTML = isDark
            ? '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>'
            : '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>';
        }
      };
    })();
  </script>

  <style>
    body {
      font-family: 'Inter', system-ui, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    ::-webkit-scrollbar { width: 6px; height: 6px; }
    ::-webkit-scrollbar-track { background: var(--scrollbar-track); }
    ::-webkit-scrollbar-thumb { background: var(--scrollbar-thumb); border-radius: 3px; }
    ::-webkit-scrollbar-thumb:hover { background: var(--scrollbar-thumb-hover); }
  </style>

  <%# Google Analytics - only in production %>
  <% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CXHFR6PC8W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CXHFR6PC8W');
    </script>
  <% end %>
</head>
<body class="h-full bg-cream-50">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex flex-col bg-white dark:bg-zinc-900 border-r border-cream-200 relative overflow-hidden flex-shrink-0">
      <!-- Decorative gradient blobs -->
      <div class="gradient-mesh">
        <div class="gradient-blob gradient-blob-primary" style="width: 200px; height: 200px; top: -60px; right: -60px;"></div>
        <div class="gradient-blob gradient-blob-success" style="width: 150px; height: 150px; bottom: 20%; left: -40px;"></div>
      </div>

      <div class="p-5 border-b border-cream-200 relative z-10 flex items-center justify-between">
        <%= link_to dashboard_projects_path, class: "flex flex-col items-end gap-1 group" do %>
          <div class="flex items-center">
            <img src="/fluyenta-logo-light.png" alt="Fluyenta" class="h-12 dark:hidden">
            <img src="/fluyenta-logo-dark.png" alt="Fluyenta" class="h-12 hidden dark:block">
          </div>
          <span class="text-[10px] font-semibold tracking-wider uppercase px-1.5 py-0.5 rounded" style="color: var(--color-primary-500); background: color-mix(in srgb, var(--color-primary-500) 12%, transparent);">Vault</span>
        <% end %>
        <%# Dark Mode Toggle %>
        <button onclick="toggleDarkMode()"
                class="p-1.5 rounded-lg transition-all text-ink-500 hover:text-ink-900 hover:bg-transparent"
                data-dark-mode-target="icon"
                aria-label="Toggle dark mode"
                title="Toggle dark mode">
          <svg data-dark-mode-target="sunIcon" class="w-4 h-4 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
          <svg data-dark-mode-target="moonIcon" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          </svg>
        </button>
      </div>

      <% if @current_project %>
        <!-- Project Selector -->
        <div class="px-4 py-3 border-b border-cream-200 relative z-10">
          <%= link_to dashboard_projects_path, class: "project-selector flex items-center gap-2 px-2 py-1.5 rounded-lg transition text-ink-500" do %>
            <div class="project-initial w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="color: var(--color-primary-500); background: color-mix(in srgb, var(--color-primary-500) 12%, transparent);">
              <%= @current_project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate"><%= @current_project.name %></span>
            <svg class="w-4 h-4 text-ink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1 relative z-10">
          <%= link_to dashboard_project_path(@current_project), class: nav_link_class('/overview') do %>
            <%= icon(:overview) %>
            Overview
          <% end %>

          <%= link_to dashboard_project_secrets_path(@current_project), class: nav_link_class('/secrets') do %>
            <%= icon(:secrets) %>
            Secrets
          <% end %>

          <%= link_to dashboard_project_environments_path(@current_project), class: nav_link_class('/environments') do %>
            <%= icon(:environments) %>
            Environments
          <% end %>

          <%= link_to dashboard_project_access_tokens_path(@current_project), class: nav_link_class('/access_tokens') do %>
            <%= icon(:access_tokens) %>
            Access Tokens
          <% end %>

          <%= link_to dashboard_project_audit_logs_path(@current_project), class: nav_link_class('/audit_logs') do %>
            <%= icon(:audit_logs) %>
            Audit Log
          <% end %>

          <%= link_to dashboard_project_connectors_path(@current_project), class: nav_link_class('/connectors') do %>
            <%= icon(:connectors) %>
            Connectors
          <% end %>

          <div class="pt-4 mt-4 border-t border-cream-200">
            <%= link_to dashboard_provider_keys_path(project_id: @current_project&.id), class: nav_link_class('/provider_keys') do %>
              <%= icon(:provider_keys) %>
              Provider Keys
            <% end %>

            <%= link_to edit_dashboard_project_path(@current_project), class: nav_link_class('/project_settings') do %>
              <%= icon(:settings) %>
              Project Settings
            <% end %>

            <%= link_to mcp_setup_dashboard_project_path(@current_project), class: nav_link_class('/mcp_setup') do %>
              <%= icon(:mcp) %>
              MCP Setup
            <% end %>

            <%= link_to ssh_keys_dashboard_project_path(@current_project), class: nav_link_class('/ssh_keys') do %>
              <%= icon(:ssh_keys) %>
              SSH Keys
            <% end %>
          </div>
        </nav>
      <% else %>
        <nav class="p-4 flex-1 relative z-10">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3 text-ink-400">Select a project</p>
        </nav>
      <% end %>

      <!-- All Products - Back to Platform -->
      <div class="px-4 pb-2 relative z-10">
        <a href="<%= ENV.fetch('BRAINZLAB_PLATFORM_EXTERNAL_URL', 'https://platform.brainzlab.ai') %>/dashboard<%= "/projects/#{@current_project.platform_project_id}" if @current_project&.persisted? && @current_project.try(:platform_project_id).present? %>"
           class="flex items-center gap-2.5 px-3 py-2 rounded-lg text-[13px] font-medium text-ink-500 hover:text-ink-900 dark:text-zinc-400 dark:hover:text-zinc-100 transition-colors hover:bg-cream-100 dark:hover:bg-zinc-800">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <rect x="3" y="3" width="7" height="7" rx="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <rect x="14" y="3" width="7" height="7" rx="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <rect x="3" y="14" width="7" height="7" rx="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <rect x="14" y="14" width="7" height="7" rx="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          All Products
        </a>
      </div>

      <!-- User Menu -->
      <% if defined?(current_user) && current_user && current_user[:email] %>
        <div class="p-3 border-t border-cream-200 relative z-10">
          <div class="flex items-center gap-3 px-2 py-2 rounded-xl hover:bg-cream-100 dark:hover:bg-zinc-800 transition">
            <div class="w-8 h-8 rounded-full flex items-center justify-center text-[12px] font-semibold text-white" style="background: var(--color-primary-500);">
              <%= current_user[:name]&.first&.upcase || current_user[:email]&.first&.upcase || "?" %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-[13px] font-medium truncate text-ink-900 dark:text-zinc-100"><%= current_user[:name] || current_user[:email]&.split('@')&.first || "User" %></p>
              <p class="text-[11px] truncate text-ink-500 dark:text-zinc-400"><%= current_user[:email] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto relative">
      <!-- Decorative gradient blobs -->
      <div class="gradient-mesh">
        <div class="gradient-blob gradient-blob-primary" style="width: 500px; height: 500px; top: -150px; right: 5%;"></div>
        <div class="gradient-blob gradient-blob-success" style="width: 400px; height: 400px; bottom: 10%; left: -100px;"></div>
        <div class="gradient-blob gradient-blob-info" style="width: 300px; height: 300px; top: 40%; right: -80px;"></div>
      </div>

      <% if notice %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-[13px] font-medium flex items-center gap-3 alert alert-success animate-fade-in-up relative z-10">
          <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-[13px] font-medium flex items-center gap-3 alert alert-error animate-fade-in-up relative z-10">
          <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <div class="p-8 relative z-10">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
