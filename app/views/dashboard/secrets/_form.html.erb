<%= form_with model: [@current_project, secret], url: secret.persisted? ? dashboard_project_secret_path(@current_project, secret) : dashboard_project_secrets_path(@current_project), class: "mt-8 space-y-6" do |f| %>
  <% if secret.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% secret.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Environment indicator -->
  <div class="rounded-md bg-gray-50 p-4">
    <p class="text-sm text-gray-600">
      Environment: <span class="font-medium text-gray-900"><%= @environment.name %></span>
      <% if @environment.locked? %>
        <span class="ml-2 inline-flex items-center rounded-full bg-red-100 px-2 py-0.5 text-xs font-medium text-red-800">ðŸ”’ Locked</span>
      <% end %>
    </p>
  </div>

  <div>
    <%= f.label :key, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono uppercase",
        placeholder: "DATABASE_URL",
        disabled: secret.persisted?,
        pattern: "[A-Z][A-Z0-9_]*" %>
    <p class="mt-1 text-xs text-gray-500">Must start with a letter and contain only uppercase letters, numbers, and underscores</p>
  </div>

  <div>
    <%= f.label :value, "Secret Value", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :value, value: @value,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono",
        rows: 4,
        placeholder: "Enter secret value..." %>
    <p class="mt-1 text-xs text-gray-500">Value will be encrypted with AES-256-GCM</p>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Database connection string" %>
  </div>

  <% if secret.persisted? %>
    <div>
      <%= f.label :note, "Version Note", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :note, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          placeholder: "Reason for update..." %>
    </div>
  <% end %>

  <details class="group">
    <summary class="cursor-pointer text-sm font-medium text-gray-700 hover:text-gray-900">
      Advanced Options
    </summary>
    <div class="mt-4 space-y-4 pl-4 border-l-2 border-gray-200">
      <div>
        <%= f.label :expires_at, "Expiration Date", class: "block text-sm font-medium text-gray-700" %>
        <%= f.datetime_local_field :expires_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :rotation_days, "Rotation Schedule (days)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :rotation_days, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
            min: 1, placeholder: "90" %>
      </div>
    </div>
  </details>

  <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", (secret.persisted? ? dashboard_project_secret_path(@current_project, secret) : dashboard_project_secrets_path(@current_project)),
        class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= f.submit secret.persisted? ? "Update Secret" : "Create Secret",
        class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
  </div>
<% end %>
