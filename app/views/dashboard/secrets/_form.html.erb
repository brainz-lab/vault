<%= form_with model: [@current_project, secret], url: secret.persisted? ? dashboard_project_secret_path(@current_project, secret) : dashboard_project_secrets_path(@current_project), class: "card mt-8 p-6 space-y-6" do |f| %>
  <% if secret.errors.any? %>
    <div class="alert-error">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% secret.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Environment indicator -->
  <div class="rounded-lg bg-stone-50 p-4 flex items-center justify-between">
    <div class="flex items-center">
      <div class="flex h-8 w-8 items-center justify-center rounded-lg <%= @environment.locked? ? 'bg-red-100' : 'bg-emerald-100' %>">
        <svg class="h-4 w-4 <%= @environment.locked? ? 'text-red-600' : 'text-emerald-600' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <% if @environment.locked? %>
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          <% else %>
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5V6.75a4.5 4.5 0 119 0v3.75M3.75 21.75h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H3.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          <% end %>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-stone-900"><%= @environment.name %></p>
        <p class="text-xs text-stone-500">Current environment</p>
      </div>
    </div>
    <% if @environment.locked? %>
      <span class="badge-red">Locked</span>
    <% end %>
  </div>

  <div>
    <%= f.label :key, class: "form-label" %>
    <%= f.text_field :key, class: "form-input font-mono uppercase",
        placeholder: "DATABASE_URL",
        disabled: secret.persisted?,
        pattern: "[A-Z][A-Z0-9_]*" %>
    <p class="form-hint">Must start with a letter and contain only uppercase letters, numbers, and underscores</p>
  </div>

  <div>
    <%= f.label :value, "Secret Value", class: "form-label" %>
    <%= f.text_area :value, value: @value,
        class: "form-input font-mono",
        rows: 4,
        placeholder: "Enter secret value..." %>
    <p class="form-hint flex items-center">
      <svg class="h-3.5 w-3.5 mr-1 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
      </svg>
      Value will be encrypted with AES-256-GCM
    </p>
  </div>

  <div>
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description, class: "form-input",
        placeholder: "Database connection string" %>
  </div>

  <% if secret.persisted? %>
    <div>
      <%= f.label :note, "Version Note", class: "form-label" %>
      <%= f.text_field :note, class: "form-input",
          placeholder: "Reason for update..." %>
    </div>
  <% end %>

  <details class="group">
    <summary class="cursor-pointer text-sm font-medium text-stone-700 hover:text-orange-600 transition-colors flex items-center">
      <svg class="h-4 w-4 mr-2 transform group-open:rotate-90 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
      </svg>
      Advanced Options
    </summary>
    <div class="mt-4 space-y-4 pl-6 border-l-2 border-orange-200">
      <div>
        <%= f.label :expires_at, "Expiration Date", class: "form-label" %>
        <%= f.datetime_local_field :expires_at, class: "form-input" %>
      </div>

      <div>
        <%= f.label :rotation_days, "Rotation Schedule (days)", class: "form-label" %>
        <%= f.number_field :rotation_days, class: "form-input",
            min: 1, placeholder: "90" %>
      </div>
    </div>
  </details>

  <div class="flex justify-end gap-3 pt-6 border-t border-stone-100">
    <%= link_to "Cancel", (secret.persisted? ? dashboard_project_secret_path(@current_project, secret) : dashboard_project_secrets_path(@current_project)), class: "btn-secondary" %>
    <%= f.submit secret.persisted? ? "Update Secret" : "Create Secret", class: "btn-primary cursor-pointer" %>
  </div>
<% end %>
