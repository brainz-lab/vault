<% content_for :title, "#{@secret.key} History" %>

<div class="max-w-4xl">
  <div class="sm:flex sm:items-center sm:justify-between mb-8">
    <div class="flex items-center">
      <div class="flex h-12 w-12 items-center justify-center rounded-xl <%= @secret.otp_enabled? ? 'bg-gradient-to-br from-emerald-100 to-emerald-200' : '' %>" style="<%= @secret.otp_enabled? ? '' : 'background: linear-gradient(135deg, var(--color-vault-bg) 0%, var(--color-cream-200) 100%);' %>">
        <% if @secret.otp_enabled? %>
          <svg class="h-6 w-6 text-emerald-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% else %>
          <svg class="h-6 w-6" style="color: var(--color-vault);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
      </div>
      <div class="ml-4">
        <h1 class="section-header font-mono"><%= @secret.key %></h1>
        <p class="section-subheader">Version history for <%= @environment.name %></p>
      </div>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to dashboard_project_secret_path(@current_project, @secret), class: "btn-secondary" do %>
        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
        </svg>
        Back to Secret
      <% end %>
    </div>
  </div>

  <!-- Badges -->
  <div class="mb-8 flex flex-wrap gap-2">
    <span class="badge <%= @environment.locked? ? 'badge-error' : 'badge-success' %> inline-flex items-center">
      <svg class="h-3.5 w-3.5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <% if @environment.locked? %>
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
        <% else %>
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5V6.75a4.5 4.5 0 119 0v3.75M3.75 21.75h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H3.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
        <% end %>
      </svg>
      <%= @environment.name %>
    </span>
    <% if @secret.otp_enabled? %>
      <span class="badge bg-emerald-100 text-emerald-700 inline-flex items-center">
        <svg class="h-3.5 w-3.5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <%= @secret.secret_type == "hotp" ? "HOTP" : "TOTP" %> Enabled
      </span>
    <% elsif @secret.credential? %>
      <span class="badge bg-blue-100 text-blue-700 inline-flex items-center">
        <svg class="h-3.5 w-3.5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
        </svg>
        Credential
      </span>
    <% end %>
  </div>

  <div class="card overflow-hidden">
    <div class="px-6 py-4" style="background: var(--color-cream-50); border-bottom: 1px solid var(--color-cream-200);">
      <h2 class="text-lg font-semibold" style="color: var(--color-ink-900);">All Versions</h2>
    </div>

    <div class="p-6">
      <div class="flow-root">
        <ul class="-mb-8">
          <% @versions.each_with_index do |version, idx| %>
            <li>
              <div class="relative pb-8">
                <% if idx != @versions.length - 1 %>
                  <span class="absolute left-4 top-4 -ml-px h-full w-0.5" style="background: var(--color-cream-300);" aria-hidden="true"></span>
                <% end %>
                <div class="relative flex space-x-3">
                  <div>
                    <span class="h-8 w-8 rounded-full flex items-center justify-center ring-4 <%= version.version == @secret.current_version_number ? 'bg-orange-500' : '' %>" style="ring-color: var(--color-cream-50); <%= version.version != @secret.current_version_number ? 'background: var(--color-cream-300);' : '' %>">
                      <span class="text-white text-xs font-bold"><%= version.version %></span>
                    </span>
                  </div>
                  <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                    <div>
                      <p class="text-sm" style="color: var(--color-ink-600);">
                        <% if version.version == @secret.current_version_number %>
                          <span class="font-semibold" style="color: var(--color-primary-600);">Current version</span>
                        <% else %>
                          Version <%= version.version %>
                        <% end %>
                        <% if version.change_note.present? %>
                          <span class="mx-1.5" style="color: var(--color-cream-300);">|</span>
                          <span class="italic" style="color: var(--color-ink-700);"><%= version.change_note %></span>
                        <% end %>
                      </p>
                      <p class="mt-1 text-xs flex items-center gap-2" style="color: var(--color-ink-400);">
                        <% if version.created_by.present? %>
                          by <span style="color: var(--color-ink-500);"><%= version.created_by %></span>
                        <% end %>
                        <% if version.has_otp_secret? %>
                          <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium bg-emerald-100 text-emerald-700">
                            <svg class="h-2.5 w-2.5 mr-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            OTP
                          </span>
                        <% end %>
                      </p>
                    </div>
                    <div class="whitespace-nowrap text-right text-sm" style="color: var(--color-ink-500);">
                      <time datetime="<%= version.created_at.iso8601 %>"><%= version.created_at.strftime("%b %d, %Y %H:%M") %></time>
                      <% if version.version != @secret.current_version_number %>
                        <div class="mt-1">
                          <%= button_to rollback_dashboard_project_secret_path(@current_project, @secret, version: version.version),
                              method: :post,
                              data: { confirm: "Roll back to version #{version.version}? #{'This will also restore the OTP secret from this version.' if version.has_otp_secret?}" },
                              class: "link text-sm font-medium" do %>
                            <svg class="h-3.5 w-3.5 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
                            </svg>
                            Rollback
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
          <% if @versions.empty? %>
            <li class="text-center py-12">
              <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5" style="background: linear-gradient(135deg, var(--color-vault-bg) 0%, var(--color-cream-200) 100%);">
                <svg class="w-8 h-8" style="color: var(--color-vault);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <p class="text-sm" style="color: var(--color-ink-500);">No versions in this environment</p>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
