<% content_for :title, "Secrets" %>

<div class="sm:flex sm:items-center sm:justify-between">
  <div>
    <h1 class="text-2xl font-semibold text-gray-900">Secrets</h1>
    <p class="mt-1 text-sm text-gray-500">Manage encrypted secrets for <%= @current_project.name %></p>
  </div>
  <div class="mt-4 sm:mt-0 flex items-center space-x-3">
    <!-- Environment Selector -->
    <div class="relative" data-controller="dropdown">
      <button type="button" class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" data-action="click->dropdown#toggle">
        <span class="mr-2"><%= @environment.locked? ? "ğŸ”’" : "ğŸŒ" %></span>
        <%= @environment.name %>
        <svg class="ml-2 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
        </svg>
      </button>
      <div class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5" data-dropdown-target="menu">
        <% @current_project.secret_environments.order(:position).each do |env| %>
          <%= link_to dashboard_project_secrets_path(@current_project, environment: env.slug),
              class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 #{env.id == @environment.id ? 'bg-gray-50' : ''}" do %>
            <span class="mr-2"><%= env.locked? ? "ğŸ”’" : "ğŸŒ" %></span>
            <%= env.name %>
          <% end %>
        <% end %>
      </div>
    </div>

    <%= link_to "New Secret", new_dashboard_project_secret_path(@current_project),
        class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
  </div>
</div>

<!-- Search -->
<div class="mt-6">
  <%= form_with url: dashboard_project_secrets_path(@current_project), method: :get, class: "flex gap-4", data: { turbo_frame: "secrets_list" } do |f| %>
    <div class="flex-1">
      <%= f.search_field :search, value: params[:search],
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          placeholder: "Search secrets..." %>
    </div>
    <%= f.hidden_field :environment, value: @environment.slug %>
    <%= f.submit "Search", class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 cursor-pointer" %>
  <% end %>
</div>

<%= turbo_frame_tag "secrets_list" do %>
  <div class="mt-6 overflow-hidden rounded-lg bg-white shadow">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Key</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Description</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Version</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Updated</th>
          <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
        <% @secrets.each do |secret| %>
          <tr class="hover:bg-gray-50">
            <td class="whitespace-nowrap px-6 py-4">
              <%= link_to dashboard_project_secret_path(@current_project, secret), class: "flex items-center" do %>
                <span class="text-lg mr-2">ğŸ”‘</span>
                <span class="text-sm font-medium text-gray-900"><%= secret.key %></span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm text-gray-500"><%= truncate(secret.description, length: 50) || "â€”" %></span>
            </td>
            <td class="whitespace-nowrap px-6 py-4">
              <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                v<%= secret.current_version_number %>
              </span>
            </td>
            <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
              <%= time_ago_in_words(secret.updated_at) %> ago
            </td>
            <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
              <%= link_to "Edit", edit_dashboard_project_secret_path(@current_project, secret), class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
        <% if @secrets.empty? %>
          <tr>
            <td colspan="5" class="px-6 py-12 text-center">
              <span class="text-4xl">ğŸ”</span>
              <h3 class="mt-2 text-sm font-semibold text-gray-900">No secrets</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by creating a new secret.</p>
              <div class="mt-6">
                <%= link_to "New Secret", new_dashboard_project_secret_path(@current_project),
                    class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
