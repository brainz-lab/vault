<% content_for :title, @secret.key %>

<div class="max-w-6xl">
  <div class="sm:flex sm:items-center sm:justify-between mb-8">
    <div class="flex items-center">
      <div class="flex h-12 w-12 items-center justify-center rounded-xl" style="background: linear-gradient(135deg, var(--color-vault-bg) 0%, var(--color-cream-200) 100%);">
        <svg class="h-6 w-6" style="color: var(--color-vault);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
        </svg>
      </div>
      <div class="ml-4">
        <h1 class="section-header font-mono"><%= @secret.key %></h1>
        <p class="section-subheader"><%= @secret.description || "No description" %></p>
      </div>
    </div>
    <div class="mt-4 sm:mt-0 flex gap-3">
      <%= link_to history_dashboard_project_secret_path(@current_project, @secret), class: "btn-secondary" do %>
        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        History
      <% end %>
      <%= link_to edit_dashboard_project_secret_path(@current_project, @secret), class: "btn-primary" do %>
        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
        </svg>
        Edit
      <% end %>
    </div>
  </div>

  <!-- Environment Badge -->
  <div class="mb-8">
    <span class="badge <%= @environment.locked? ? 'badge-error' : 'badge-success' %> inline-flex items-center">
      <svg class="h-3.5 w-3.5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <% if @environment.locked? %>
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
        <% else %>
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5V6.75a4.5 4.5 0 119 0v3.75M3.75 21.75h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H3.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
        <% end %>
      </svg>
      <%= @environment.name %>
    </span>
  </div>

  <div class="grid gap-8 lg:grid-cols-3">
    <!-- Value Section -->
    <div class="lg:col-span-2 space-y-6">
      <div class="card">
        <div class="card-body">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold" style="color: var(--color-ink-900);">Secret Value</h2>
            <span class="badge badge-neutral">v<%= @secret.current_version_number %></span>
          </div>

          <div data-controller="secret-reveal">
            <div class="relative">
              <div class="secret-display" data-secret-reveal-target="container">
                <span data-secret-reveal-target="hidden" class="secret-hidden">
                  ••••••••••••••••••••••••••••••••
                </span>
                <span data-secret-reveal-target="value" class="secret-revealed hidden"><%= @value %></span>
              </div>
              <div class="absolute top-3 right-3 flex gap-2">
                <button type="button" class="rounded-md bg-slate-700 px-2.5 py-1.5 text-xs font-medium text-slate-300 hover:bg-slate-600 transition-colors" data-action="click->secret-reveal#toggle" data-secret-reveal-target="button">
                  Show
                </button>
                <button type="button" class="rounded-md bg-slate-700 px-2.5 py-1.5 text-xs font-medium text-slate-300 hover:bg-slate-600 transition-colors" data-action="click->secret-reveal#copy" data-clipboard-text="<%= @value %>">
                  Copy
                </button>
              </div>
            </div>
            <p class="mt-3 text-xs flex items-center" style="color: var(--color-ink-500);">
              <svg class="h-3.5 w-3.5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Click "Show" to reveal the secret value
            </p>
          </div>
        </div>
      </div>

      <!-- Recent Versions -->
      <div class="card overflow-hidden">
        <div class="px-6 py-4 flex justify-between items-center" style="background: var(--color-cream-50); border-bottom: 1px solid var(--color-cream-200);">
          <h2 class="text-lg font-semibold" style="color: var(--color-ink-900);">Recent Versions</h2>
          <%= link_to "View All", history_dashboard_project_secret_path(@current_project, @secret), class: "link text-sm font-medium" %>
        </div>
        <ul class="divide-y" style="border-color: var(--color-cream-100);">
          <% @versions.each do |version| %>
            <li class="px-6 py-4 flex items-center justify-between">
              <div>
                <p class="text-sm font-medium" style="color: var(--color-ink-900);">Version <%= version.version %></p>
                <p class="text-sm" style="color: var(--color-ink-500);">
                  <%= version.created_at.strftime("%b %d, %Y at %H:%M") %>
                  <% if version.change_note.present? %>
                    - <span class="italic"><%= version.change_note %></span>
                  <% end %>
                </p>
              </div>
              <% if version.version != @secret.current_version_number %>
                <%= button_to rollback_dashboard_project_secret_path(@current_project, @secret, version: version.version),
                    method: :post,
                    data: { confirm: "Roll back to version #{version.version}?" },
                    class: "link text-sm font-medium" do %>
                  Rollback
                <% end %>
              <% else %>
                <span class="badge badge-success">Current</span>
              <% end %>
            </li>
          <% end %>
          <% if @versions.empty? %>
            <li class="px-6 py-10 text-center text-sm" style="color: var(--color-ink-500);">No versions in this environment</li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Metadata Section -->
    <div class="space-y-6">
      <div class="card">
        <div class="card-body">
          <h2 class="text-lg font-semibold mb-4" style="color: var(--color-ink-900);">Details</h2>
          <dl class="space-y-4">
            <div>
              <dt class="text-xs font-medium uppercase tracking-wide" style="color: var(--color-ink-500);">Path</dt>
              <dd class="mt-1 text-sm font-mono" style="color: var(--color-ink-900);"><%= @secret.path %></dd>
            </div>
            <% if @secret.secret_folder %>
              <div>
                <dt class="text-xs font-medium uppercase tracking-wide" style="color: var(--color-ink-500);">Folder</dt>
                <dd class="mt-1 text-sm" style="color: var(--color-ink-900);"><%= @secret.secret_folder.path %></dd>
              </div>
            <% end %>
            <div>
              <dt class="text-xs font-medium uppercase tracking-wide" style="color: var(--color-ink-500);">Created</dt>
              <dd class="mt-1 text-sm" style="color: var(--color-ink-900);"><%= @secret.created_at.strftime("%b %d, %Y") %></dd>
            </div>
            <div>
              <dt class="text-xs font-medium uppercase tracking-wide" style="color: var(--color-ink-500);">Last Updated</dt>
              <dd class="mt-1 text-sm" style="color: var(--color-ink-900);"><%= @secret.updated_at.strftime("%b %d, %Y at %H:%M") %></dd>
            </div>
            <% if @secret.rotation_interval_days %>
              <div>
                <dt class="text-xs font-medium uppercase tracking-wide" style="color: var(--color-ink-500);">Rotation Schedule</dt>
                <dd class="mt-1 text-sm" style="color: var(--color-ink-900);">Every <%= @secret.rotation_interval_days %> days</dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <% if @secret.tags.present? %>
        <div class="card">
          <div class="card-body">
            <h2 class="text-lg font-semibold mb-4" style="color: var(--color-ink-900);">Tags</h2>
            <div class="flex flex-wrap gap-2">
              <% @secret.tags.each do |key, value| %>
                <span class="badge badge-warning">
                  <%= key %>: <%= value %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Danger Zone -->
      <div class="card border-red-200">
        <div class="card-body">
          <h2 class="text-lg font-semibold text-red-600 mb-3 flex items-center">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
            </svg>
            Danger Zone
          </h2>
          <p class="text-sm mb-4" style="color: var(--color-ink-500);">Archiving a secret will hide it from the list but preserve its history.</p>
          <%= button_to dashboard_project_secret_path(@current_project, @secret),
              method: :delete,
              data: { confirm: "Are you sure you want to archive this secret?" },
              class: "btn-danger w-full justify-center" do %>
            <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m6 4.125l2.25 2.25m0 0l2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
            </svg>
            Archive Secret
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
