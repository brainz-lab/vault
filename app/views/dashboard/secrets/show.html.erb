<% content_for :title, @secret.key %>

<div class="sm:flex sm:items-center sm:justify-between">
  <div>
    <div class="flex items-center">
      <span class="text-2xl mr-3">ðŸ”‘</span>
      <h1 class="text-2xl font-semibold text-gray-900"><%= @secret.key %></h1>
    </div>
    <p class="mt-1 text-sm text-gray-500"><%= @secret.description || "No description" %></p>
  </div>
  <div class="mt-4 sm:mt-0 flex space-x-3">
    <%= link_to "History", history_dashboard_project_secret_path(@current_project, @secret),
        class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= link_to "Edit", edit_dashboard_project_secret_path(@current_project, @secret),
        class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
  </div>
</div>

<!-- Environment Badge -->
<div class="mt-4">
  <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium <%= @environment.locked? ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
    <span class="mr-1"><%= @environment.locked? ? "ðŸ”’" : "ðŸŒ" %></span>
    <%= @environment.name %>
  </span>
</div>

<div class="mt-8 grid gap-8 lg:grid-cols-3">
  <!-- Value Section -->
  <div class="lg:col-span-2">
    <div class="rounded-lg bg-white shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-medium text-gray-900">Secret Value</h2>
        <span class="text-sm text-gray-500">Version <%= @secret.current_version_number %></span>
      </div>

      <div data-controller="secret-reveal">
        <div class="relative">
          <div class="rounded-md bg-gray-900 p-4 font-mono text-sm" data-secret-reveal-target="container">
            <span data-secret-reveal-target="hidden" class="text-gray-400">â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢</span>
            <span data-secret-reveal-target="value" class="text-green-400 hidden break-all"><%= @value %></span>
          </div>
          <div class="absolute top-2 right-2 flex space-x-2">
            <button type="button" class="rounded bg-gray-700 px-2 py-1 text-xs text-gray-300 hover:bg-gray-600" data-action="click->secret-reveal#toggle" data-secret-reveal-target="button">
              Show
            </button>
            <button type="button" class="rounded bg-gray-700 px-2 py-1 text-xs text-gray-300 hover:bg-gray-600" data-action="click->secret-reveal#copy" data-clipboard-text="<%= @value %>">
              Copy
            </button>
          </div>
        </div>
        <p class="mt-2 text-xs text-gray-500">Click "Show" to reveal the secret value</p>
      </div>
    </div>

    <!-- Recent Versions -->
    <div class="mt-6 rounded-lg bg-white shadow">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <h2 class="text-lg font-medium text-gray-900">Recent Versions</h2>
        <%= link_to "View All", history_dashboard_project_secret_path(@current_project, @secret), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @versions.each do |version| %>
          <li class="px-6 py-4 flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-900">Version <%= version.version %></p>
              <p class="text-sm text-gray-500">
                <%= version.created_at.strftime("%b %d, %Y at %H:%M") %>
                <% if version.note.present? %>
                  â€” <%= version.note %>
                <% end %>
              </p>
            </div>
            <% if version.version != @secret.current_version_number %>
              <%= button_to "Rollback", rollback_dashboard_project_secret_path(@current_project, @secret, version: version.version),
                  method: :post,
                  data: { confirm: "Roll back to version #{version.version}?" },
                  class: "text-sm text-indigo-600 hover:text-indigo-500" %>
            <% else %>
              <span class="text-sm text-green-600">Current</span>
            <% end %>
          </li>
        <% end %>
        <% if @versions.empty? %>
          <li class="px-6 py-8 text-center text-sm text-gray-500">No versions in this environment</li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Metadata Section -->
  <div class="space-y-6">
    <div class="rounded-lg bg-white shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Details</h2>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Path</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @secret.path %></dd>
        </div>
        <% if @secret.folder %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Folder</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @secret.folder.path %></dd>
          </div>
        <% end %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @secret.created_at.strftime("%b %d, %Y") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @secret.updated_at.strftime("%b %d, %Y at %H:%M") %></dd>
        </div>
        <% if @secret.expires_at %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Expires</dt>
            <dd class="mt-1 text-sm <%= @secret.expires_at < Time.current ? 'text-red-600' : 'text-gray-900' %>">
              <%= @secret.expires_at.strftime("%b %d, %Y") %>
            </dd>
          </div>
        <% end %>
        <% if @secret.rotation_days %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Rotation Schedule</dt>
            <dd class="mt-1 text-sm text-gray-900">Every <%= @secret.rotation_days %> days</dd>
          </div>
        <% end %>
      </dl>
    </div>

    <% if @secret.tags.present? %>
      <div class="rounded-lg bg-white shadow p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Tags</h2>
        <div class="flex flex-wrap gap-2">
          <% @secret.tags.each do |key, value| %>
            <span class="inline-flex items-center rounded-full bg-indigo-100 px-3 py-1 text-xs font-medium text-indigo-800">
              <%= key %>: <%= value %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Danger Zone -->
    <div class="rounded-lg bg-white shadow p-6">
      <h2 class="text-lg font-medium text-red-600 mb-4">Danger Zone</h2>
      <%= button_to "Archive Secret", dashboard_project_secret_path(@current_project, @secret),
          method: :delete,
          data: { confirm: "Are you sure you want to archive this secret?" },
          class: "w-full rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500" %>
    </div>
  </div>
</div>
