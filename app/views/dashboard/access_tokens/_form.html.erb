<%= form_with model: [@current_project, token], url: token.persisted? ? dashboard_project_access_token_path(@current_project, token) : dashboard_project_access_tokens_path(@current_project), class: "mt-8 space-y-6" do |f| %>
  <% if token.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <ul class="list-disc list-inside text-sm text-red-700">
        <% token.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "CI/CD Token" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Used for GitHub Actions deployments" %>
  </div>

  <div>
    <span class="block text-sm font-medium text-gray-700 mb-2">Permissions</span>
    <div class="space-y-2">
      <% %w[read write delete].each do |perm| %>
        <label class="flex items-center">
          <%= check_box_tag "access_token[permissions][]", perm, (token.permissions || []).include?(perm),
              class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
          <span class="ml-2 text-sm text-gray-700">
            <strong><%= perm.capitalize %></strong>
            <span class="text-gray-500">
              <%= case perm
                  when "read" then "â€” Read secret values"
                  when "write" then "â€” Create and update secrets"
                  when "delete" then "â€” Delete secrets"
                  end %>
            </span>
          </span>
        </label>
      <% end %>
    </div>
  </div>

  <div>
    <span class="block text-sm font-medium text-gray-700 mb-2">Environment Access</span>
    <div class="space-y-2">
      <% @current_project.secret_environments.order(:position).each do |env| %>
        <label class="flex items-center">
          <%= check_box_tag "access_token[environments][]", env.slug, (token.environments || []).include?(env.slug),
              class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
          <span class="ml-2 text-sm text-gray-700">
            <span class="mr-1"><%= env.locked? ? "ðŸ”’" : "ðŸŒ" %></span>
            <%= env.name %>
          </span>
        </label>
      <% end %>
    </div>
    <p class="mt-1 text-xs text-gray-500">Leave unchecked to allow access to all environments</p>
  </div>

  <div>
    <%= f.label :expires_at, "Expiration Date", class: "block text-sm font-medium text-gray-700" %>
    <%= f.datetime_local_field :expires_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    <p class="mt-1 text-xs text-gray-500">Leave blank for no expiration</p>
  </div>

  <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", dashboard_project_access_tokens_path(@current_project),
        class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= f.submit token.persisted? ? "Update Token" : "Create Token",
        class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
  </div>
<% end %>
