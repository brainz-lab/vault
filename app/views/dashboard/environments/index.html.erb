<% content_for :title, "Environments" %>

<div class="max-w-6xl">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="section-header">Environments</h1>
      <p class="section-subheader">Manage secret environments for <%= @current_project.name %></p>
    </div>
    <%= link_to new_dashboard_project_environment_path(@current_project), class: "btn-primary" do %>
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      New Environment
    <% end %>
  </div>

  <% if @environments.any? %>
    <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
      <% @environments.each do |env| %>
        <div class="card p-6 transition-all hover:shadow-md">
          <div class="flex items-start justify-between">
            <div class="flex items-center">
              <div class="flex h-11 w-11 items-center justify-center rounded-xl transition-colors" style="background: <%= env.locked? ? 'linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%)' : 'linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%)' %>;">
                <svg class="h-5 w-5 <%= env.locked? ? 'text-red-600' : 'text-emerald-600' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <% if env.locked? %>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                  <% else %>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5V6.75a4.5 4.5 0 119 0v3.75M3.75 21.75h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H3.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                  <% end %>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-base font-semibold" style="color: var(--color-ink-900);"><%= env.name %></h3>
                <p class="text-sm font-mono" style="color: var(--color-ink-400);"><%= env.slug %></p>
              </div>
            </div>
            <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= env.locked? ? 'bg-red-50 text-red-700' : 'bg-emerald-50 text-emerald-700' %>">
              <%= env.locked? ? "Locked" : "Open" %>
            </span>
          </div>

          <% if env.parent_environment.present? %>
            <div class="mt-4 flex items-center text-sm" style="color: var(--color-ink-500);">
              <svg class="h-4 w-4 mr-1.5" style="color: var(--color-ink-400);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 7.5L7.5 3m0 0L12 7.5M7.5 3v13.5m13.5 0L16.5 21m0 0L12 16.5m4.5 4.5V7.5" />
              </svg>
              Inherits from <span class="font-medium ml-1"><%= env.parent_environment.name %></span>
            </div>
          <% end %>

          <div class="mt-4 pt-4 border-t" style="border-color: var(--color-cream-100);">
            <div class="flex items-center text-sm" style="color: var(--color-ink-500);">
              <svg class="h-4 w-4 mr-1.5" style="color: var(--color-ink-400);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
              </svg>
              <%= env.distinct_secrets_count %> secrets
            </div>
          </div>

          <div class="mt-5 flex gap-3">
            <%= link_to edit_dashboard_project_environment_path(@current_project, env), class: "btn-secondary flex-1 justify-center text-sm" do %>
              Edit
            <% end %>
            <% if env.distinct_secrets_count.zero? %>
              <%= button_to dashboard_project_environment_path(@current_project, env),
                  method: :delete,
                  data: { confirm: "Delete this environment?" },
                  class: "btn-danger flex-1 justify-center text-sm" do %>
                Delete
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="card">
      <div class="empty-state py-16">
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5" style="background: linear-gradient(135deg, var(--color-vault-bg) 0%, var(--color-cream-200) 100%);">
          <svg class="w-8 h-8" style="color: var(--color-vault);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
        </div>
        <h3 class="empty-state-title">No environments</h3>
        <p class="empty-state-description">Get started by creating your first environment.</p>
        <div class="mt-8">
          <%= link_to new_dashboard_project_environment_path(@current_project), class: "btn-primary" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            New Environment
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
