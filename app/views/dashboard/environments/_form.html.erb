<%= form_with model: [@current_project, environment], url: environment.persisted? ? dashboard_project_environment_path(@current_project, environment) : dashboard_project_environments_path(@current_project), class: "mt-8 space-y-6" do |f| %>
  <% if environment.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <ul class="list-disc list-inside text-sm text-red-700">
        <% environment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Production" %>
  </div>

  <div>
    <%= f.label :slug, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :slug, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono lowercase",
        placeholder: "production",
        disabled: environment.persisted? %>
    <p class="mt-1 text-xs text-gray-500">Lowercase letters, numbers, and hyphens only</p>
  </div>

  <div>
    <%= f.label :inherits_from, "Inherits From", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :inherits_from,
        options_for_select(
          [["None", ""]] + @current_project.secret_environments.where.not(id: environment.id).map { |e| [e.name, e.slug] },
          environment.inherits_from
        ),
        {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    <p class="mt-1 text-xs text-gray-500">If a secret doesn't exist in this environment, it will be inherited from the selected environment</p>
  </div>

  <div>
    <%= f.label :position, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :position, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        min: 0 %>
    <p class="mt-1 text-xs text-gray-500">Display order (lower numbers appear first)</p>
  </div>

  <div class="flex items-center">
    <%= f.check_box :locked, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
    <%= f.label :locked, class: "ml-2 block text-sm text-gray-900" do %>
      <span class="font-medium">ðŸ”’ Locked Environment</span>
      <span class="text-gray-500">â€” Require additional approval for changes</span>
    <% end %>
  </div>

  <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", dashboard_project_environments_path(@current_project),
        class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= f.submit environment.persisted? ? "Update Environment" : "Create Environment",
        class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
  </div>
<% end %>
