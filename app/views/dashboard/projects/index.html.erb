<% content_for :title, "Projects" %>

<div class="max-w-5xl">
  <!-- Header -->
  <div class="flex items-center justify-between mb-10">
    <div>
      <h1 class="section-header">Projects</h1>
      <p class="section-subheader">Manage secrets for your applications</p>
    </div>
    <%= link_to new_dashboard_project_path, class: "btn-primary" do %>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      New Project
    <% end %>
  </div>

  <% if @projects.any? %>
    <!-- Projects List -->
    <div class="card overflow-hidden">
      <div class="divide-y" style="--tw-divide-opacity: 1; border-color: var(--color-cream-100);">
        <% @projects.each do |project| %>
          <% cache [project, project.secrets_count, project.environments_count, project.tokens_count] do %>
          <%= link_to dashboard_project_path(project), class: "group block" do %>
            <div class="px-6 py-5 flex items-center justify-between transition-colors" style="background: transparent;" onmouseover="this.style.background='var(--color-cream-50)'" onmouseout="this.style.background='transparent'">
              <div class="flex items-center gap-4">
                <!-- Project Icon -->
                <div class="w-12 h-12 rounded-xl flex items-center justify-center transition-all" style="background: linear-gradient(135deg, var(--color-vault-bg) 0%, var(--color-cream-200) 100%);">
                  <svg class="w-6 h-6" style="color: var(--color-vault);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                  </svg>
                </div>

                <!-- Project Info -->
                <div>
                  <h3 class="text-[15px] font-semibold transition-colors" style="color: var(--color-ink-900);">
                    <%= project.name %>
                  </h3>
                  <p class="text-sm mt-0.5" style="color: var(--color-ink-500);">
                    Created <%= time_ago_in_words(project.created_at) %> ago
                  </p>
                </div>
              </div>

              <!-- Stats & Arrow -->
              <div class="flex items-center gap-8">
                <div class="flex items-center gap-6">
                  <div class="text-center">
                    <div class="text-lg font-semibold" style="color: var(--color-ink-900);"><%= project.secrets_count %></div>
                    <div class="text-xs font-medium" style="color: var(--color-ink-400);">Secrets</div>
                  </div>
                  <div class="text-center">
                    <div class="text-lg font-semibold" style="color: var(--color-ink-900);"><%= project.environments_count %></div>
                    <div class="text-xs font-medium" style="color: var(--color-ink-400);">Environments</div>
                  </div>
                  <div class="text-center">
                    <div class="text-lg font-semibold" style="color: var(--color-ink-900);"><%= project.tokens_count %></div>
                    <div class="text-xs font-medium" style="color: var(--color-ink-400);">Tokens</div>
                  </div>
                </div>
                <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" style="color: var(--color-ink-300);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="card">
      <div class="empty-state py-16">
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5" style="background: linear-gradient(135deg, var(--color-vault-bg) 0%, var(--color-cream-200) 100%);">
          <svg class="w-8 h-8" style="color: var(--color-vault);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
        </div>
        <h3 class="empty-state-title">No projects yet</h3>
        <p class="empty-state-description">Get started by creating your first project to securely manage your application secrets.</p>
        <div class="mt-8">
          <%= link_to new_dashboard_project_path, class: "btn-primary" do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Create Your First Project
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
