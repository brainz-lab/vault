<% content_for :title, "Projects" %>

<div class="max-w-5xl">
  <!-- Header -->
  <div class="flex items-center justify-between mb-10">
    <div>
      <h1 class="section-header">Projects</h1>
      <p class="section-subheader">Manage secrets for your applications</p>
    </div>
    <% unless Rails.env.production? %>
      <%= link_to new_dashboard_project_path, class: "btn-primary" do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        New Project
      <% end %>
    <% end %>
  </div>

  <% if @projects.any? %>
    <!-- Projects List -->
    <div class="card overflow-hidden">
      <div class="divide-y border-light">
        <% @projects.each do |project| %>
          <% cache [project, project.secrets_count, project.environments_count, project.tokens_count] do %>
          <%= link_to dashboard_project_path(project), class: "group block table-row-hover" do %>
            <div class="px-6 py-5 flex items-center justify-between transition-colors">
              <div class="flex items-center gap-4">
                <!-- Project Icon -->
                <div class="w-12 h-12 rounded-xl flex items-center justify-center transition-all icon-bg-vault">
                  <svg class="w-6 h-6 text-vault" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                  </svg>
                </div>

                <!-- Project Info -->
                <div>
                  <h3 class="text-[15px] font-semibold transition-colors text-primary">
                    <%= project.name %>
                  </h3>
                  <p class="text-sm mt-0.5 text-muted">
                    Created <%= time_ago_in_words(project.created_at) %> ago
                  </p>
                </div>
              </div>

              <!-- Stats & Arrow -->
              <div class="flex items-center gap-8">
                <div class="flex items-center gap-6">
                  <div class="text-center">
                    <div class="text-lg font-semibold text-primary"><%= project.secrets_count %></div>
                    <div class="text-xs font-medium text-faint">Secrets</div>
                  </div>
                  <div class="text-center">
                    <div class="text-lg font-semibold text-primary"><%= project.environments_count %></div>
                    <div class="text-xs font-medium text-faint">Environments</div>
                  </div>
                  <div class="text-center">
                    <div class="text-lg font-semibold text-primary"><%= project.tokens_count %></div>
                    <div class="text-xs font-medium text-faint">Tokens</div>
                  </div>
                </div>
                <svg class="w-5 h-5 transition-transform group-hover:translate-x-1 text-faint" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="card">
      <div class="empty-state py-16">
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5 icon-bg-vault">
          <svg class="w-8 h-8 text-vault" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
        </div>
        <h3 class="empty-state-title">No projects yet</h3>
        <% if Rails.env.production? %>
          <p class="empty-state-description">Create a project in Platform to get started.</p>
          <div class="mt-8">
            <%= link_to ENV.fetch('BRAINZLAB_PLATFORM_EXTERNAL_URL', 'https://platform.brainzlab.ai'), target: "_blank", class: "btn-primary" do %>
              Go to Platform
            <% end %>
          </div>
        <% else %>
          <p class="empty-state-description">Get started by creating your first project to securely manage your application secrets.</p>
          <div class="mt-8">
            <%= link_to new_dashboard_project_path, class: "btn-primary" do %>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
              Create Your First Project
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
