<% content_for :title, "Edit #{@project.name}" %>
<% content_for :navigation, true %>

<div class="mx-auto max-w-2xl">
  <div class="page-header">
    <h1 class="page-title">Edit Project</h1>
    <p class="page-subtitle">Update project settings for <%= @project.name %></p>
  </div>

  <%= render "form", project: @project %>

  <div class="card p-6 mt-8 border-red-200">
    <h2 class="text-lg font-semibold text-red-600 mb-3 flex items-center">
      <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
      </svg>
      Danger Zone
    </h2>
    <p class="text-sm text-stone-500 mb-4">Deleting a project will permanently remove all secrets, tokens, and audit logs. This action cannot be undone.</p>
    <%= button_to dashboard_project_path(@project),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this project? This action cannot be undone." },
        class: "btn-danger w-full justify-center" do %>
      <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
      </svg>
      Delete Project
    <% end %>
  </div>
</div>
