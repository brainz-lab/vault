<% content_for :title, "Edit #{@project.name}" %>

<div class="max-w-xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to dashboard_project_path(@project), class: "inline-flex items-center gap-1.5 text-sm font-medium mb-4 transition-colors", style: "color: var(--dm-text-secondary);", onmouseover: "this.style.color='var(--dm-text)'" , onmouseout: "this.style.color='var(--dm-text-secondary)'" do %>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
      </svg>
      Back to <%= @project.name %>
    <% end %>
    <h1 class="section-header">Project Settings</h1>
    <p class="section-subheader">Update settings for <%= @project.name %></p>
  </div>

  <%= render "form", project: @project %>

  <!-- Danger Zone -->
  <div class="card mt-8" style="border-color: var(--color-error-200);">
    <div class="card-body">
      <h2 class="text-base font-semibold flex items-center gap-2" style="color: var(--color-error-600);">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
        </svg>
        Danger Zone
      </h2>
      <p class="text-sm mt-2" style="color: var(--dm-text-secondary);">
        Deleting this project will permanently remove all secrets, access tokens, and audit logs. This action cannot be undone.
      </p>
      <div class="mt-4">
        <%= button_to dashboard_project_path(@project),
            method: :delete,
            data: { turbo_confirm: "Are you absolutely sure you want to delete #{@project.name}? This will permanently remove all secrets, tokens, and audit logs. This action cannot be undone." },
            class: "btn-danger" do %>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
          Delete Project
        <% end %>
      </div>
    </div>
  </div>
</div>
