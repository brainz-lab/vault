<% content_for :title, "Edit #{@project.name}" %>

<div class="mx-auto max-w-2xl">
  <h1 class="text-2xl font-semibold text-gray-900">Edit Project</h1>
  <p class="mt-2 text-sm text-gray-700">Update project settings</p>

  <%= render "form", project: @project %>

  <div class="mt-12 border-t border-gray-200 pt-8">
    <h2 class="text-lg font-medium text-red-600">Danger Zone</h2>
    <p class="mt-2 text-sm text-gray-500">Deleting a project will permanently remove all secrets, tokens, and audit logs.</p>
    <%= button_to "Delete Project", dashboard_project_path(@project),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this project? This action cannot be undone." },
        class: "mt-4 inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500" %>
  </div>
</div>
