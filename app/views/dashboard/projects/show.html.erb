<% content_for :title, @project.name %>

<div class="max-w-6xl">
  <!-- Header -->
  <div class="flex items-center justify-between mb-10">
    <div>
      <div class="flex items-center gap-3 mb-1">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center icon-bg-vault">
          <svg class="w-5 h-5 text-vault" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
          </svg>
        </div>
        <h1 class="section-header"><%= @project.name %></h1>
      </div>
      <p class="section-subheader">Project Overview</p>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to mcp_setup_dashboard_project_path(@project), class: "btn-secondary btn-sm" do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        MCP Setup
      <% end %>
      <%= link_to edit_dashboard_project_path(@project), class: "btn-secondary btn-sm" do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        Settings
      <% end %>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-10">
    <div class="stat-card">
      <div class="flex items-center gap-4">
        <div class="w-11 h-11 rounded-xl flex items-center justify-center icon-bg-vault">
          <svg class="w-5 h-5 text-vault" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
          </svg>
        </div>
        <div>
          <div class="stat-label">Total Secrets</div>
          <div class="stat-value"><%= @project.secrets.active.count %></div>
        </div>
      </div>
    </div>

    <div class="stat-card">
      <div class="flex items-center gap-4">
        <div class="w-11 h-11 rounded-xl flex items-center justify-center icon-bg-info">
          <svg class="w-5 h-5 text-info-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-9-5.25L3 7.5m18 0l-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
          </svg>
        </div>
        <div>
          <div class="stat-label">Environments</div>
          <div class="stat-value"><%= @environments.count %></div>
        </div>
      </div>
    </div>

    <div class="stat-card">
      <div class="flex items-center gap-4">
        <div class="w-11 h-11 rounded-xl flex items-center justify-center icon-bg-success">
          <svg class="w-5 h-5 text-success-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.864 4.243A7.5 7.5 0 0119.5 10.5c0 2.92-.556 5.709-1.568 8.268M5.742 6.364A7.465 7.465 0 004.5 10.5a7.464 7.464 0 01-1.15 3.993m1.989 3.559A11.209 11.209 0 008.25 10.5a3.75 3.75 0 117.5 0c0 .527-.021 1.049-.064 1.565M12 10.5a14.94 14.94 0 01-3.6 9.75m6.633-4.596a18.666 18.666 0 01-2.485 5.33" />
          </svg>
        </div>
        <div>
          <div class="stat-label">Active Tokens</div>
          <div class="stat-value"><%= @project.access_tokens.active.count %></div>
        </div>
      </div>
    </div>

    <div class="stat-card">
      <div class="flex items-center gap-4">
        <div class="w-11 h-11 rounded-xl flex items-center justify-center icon-bg-purple">
          <svg class="w-5 h-5 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
          </svg>
        </div>
        <div>
          <div class="stat-label">Audit Events</div>
          <div class="stat-value"><%= @project.audit_logs.count %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Two Column Layout -->
  <div class="grid gap-6 lg:grid-cols-2 mb-10">
    <!-- Recent Secrets -->
    <div class="card overflow-hidden">
      <div class="card-header flex items-center justify-between">
        <h2 class="text-base font-semibold text-primary">Recent Secrets</h2>
        <%= link_to dashboard_project_secrets_path(@project), class: "text-sm font-medium transition-colors link-primary" do %>
          View All →
        <% end %>
      </div>
      <div>
        <% if @recent_secrets.any? %>
          <% @recent_secrets.each do |secret| %>
            <%= link_to dashboard_project_secret_path(@project, secret), class: "group block px-5 py-4 transition-colors border-b border-light table-row-hover" do %>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-9 h-9 rounded-lg flex items-center justify-center icon-bg-vault">
                    <svg class="w-4 h-4 text-vault" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-primary"><%= secret.key %></p>
                    <p class="text-xs text-faint"><%= secret.description.presence || "No description" %></p>
                  </div>
                </div>
                <span class="text-xs text-faint"><%= time_ago_in_words(secret.updated_at) %> ago</span>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <div class="px-5 py-10 text-center">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center mx-auto mb-3 icon-bg-neutral">
              <svg class="w-6 h-6 text-faint" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
              </svg>
            </div>
            <p class="text-sm text-muted">No secrets yet</p>
            <%= link_to new_dashboard_project_secret_path(@project), class: "text-sm font-medium mt-2 inline-block link-primary" do %>
              Add your first secret →
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="card overflow-hidden">
      <div class="card-header flex items-center justify-between">
        <h2 class="text-base font-semibold text-primary">Recent Activity</h2>
        <%= link_to dashboard_project_audit_logs_path(@project), class: "text-sm font-medium transition-colors link-primary" do %>
          View All →
        <% end %>
      </div>
      <div>
        <% if @recent_logs.any? %>
          <% @recent_logs.each do |log| %>
            <div class="px-5 py-4 border-b border-light">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-9 h-9 rounded-lg flex items-center justify-center icon-bg-neutral">
                    <svg class="w-4 h-4 text-faint" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-primary"><%= log.action.humanize %></p>
                    <p class="text-xs text-faint">
                      <%= log.resource_path || "System" %> by <%= log.actor_name %>
                    </p>
                  </div>
                </div>
                <span class="text-xs text-faint"><%= time_ago_in_words(log.created_at) %> ago</span>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-5 py-10 text-center">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center mx-auto mb-3 icon-bg-neutral">
              <svg class="w-6 h-6 text-faint" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <p class="text-sm text-muted">No activity yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Environments Section -->
  <div>
    <h2 class="text-base font-semibold mb-4 text-primary">Environments</h2>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <% @environments.each do |env| %>
        <div class="card card-body">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg flex items-center justify-center <%= env.locked? ? 'icon-bg-error' : 'icon-bg-success' %>">
                <svg class="w-5 h-5 <%= env.locked? ? 'text-error-500' : 'text-success-500' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <% if env.locked? %>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                  <% else %>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5V6.75a4.5 4.5 0 119 0v3.75M3.75 21.75h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H3.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                  <% end %>
                </svg>
              </div>
              <span class="font-medium text-primary"><%= env.name %></span>
            </div>
            <span class="badge <%= env.locked? ? 'badge-error' : 'badge-success' %>">
              <%= env.locked? ? "Locked" : "Open" %>
            </span>
          </div>
          <% if env.parent_environment.present? %>
            <p class="text-xs mt-3 text-faint">
              <span class="font-medium">Inherits from:</span> <%= env.parent_environment.name %>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
