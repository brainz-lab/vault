<% content_for :title, "Provider Keys" %>

<div class="flex items-center justify-between mb-8">
  <div>
    <h1 class="text-2xl font-semibold text-stone-900">Provider Keys</h1>
    <p class="text-sm text-stone-500 mt-1">API keys for AI providers (OpenAI, Anthropic, etc.)</p>
  </div>
  <div class="flex items-center gap-3">
    <%= link_to new_dashboard_provider_key_path(global: true, project_id: current_project&.id),
        class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium border border-stone-200 text-stone-700 hover:bg-stone-50 transition" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Global Key
    <% end %>
    <% if current_project %>
      <%= link_to new_dashboard_provider_key_path(project_id: current_project.id),
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium bg-orange-600 text-white hover:bg-orange-700 transition" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Project Key
      <% end %>
    <% end %>
  </div>
</div>

<!-- Global Keys Section -->
<div class="mb-8">
  <h2 class="text-sm font-medium uppercase tracking-wider text-stone-400 mb-4">Global Keys</h2>
  <% if @global_keys.any? %>
    <div class="bg-white rounded-2xl border border-stone-200 overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="border-b border-stone-100 bg-stone-50">
            <th class="text-left px-6 py-3 text-xs font-medium uppercase tracking-wider text-stone-500">Name</th>
            <th class="text-left px-6 py-3 text-xs font-medium uppercase tracking-wider text-stone-500">Provider</th>
            <th class="text-left px-6 py-3 text-xs font-medium uppercase tracking-wider text-stone-500">Type</th>
            <th class="text-left px-6 py-3 text-xs font-medium uppercase tracking-wider text-stone-500">Key Prefix</th>
            <th class="text-left px-6 py-3 text-xs font-medium uppercase tracking-wider text-stone-500">Usage</th>
            <th class="text-left px-6 py-3 text-xs font-medium uppercase tracking-wider text-stone-500">Status</th>
            <th class="text-right px-6 py-3 text-xs font-medium uppercase tracking-wider text-stone-500">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-stone-100">
          <% @global_keys.each do |key| %>
            <tr class="hover:bg-stone-50 transition">
              <td class="px-6 py-4">
                <span class="font-medium text-stone-900"><%= key.name %></span>
              </td>
              <td class="px-6 py-4">
                <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium <%= provider_badge_class(key.provider) %>">
                  <%= key.provider.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm text-stone-600"><%= key.model_type.upcase %></td>
              <td class="px-6 py-4 font-mono text-sm text-stone-500"><%= key.key_prefix %>...</td>
              <td class="px-6 py-4 text-sm text-stone-600">
                <%= number_with_delimiter(key.usage_count) %> calls
                <% if key.last_used_at %>
                  <br><span class="text-xs text-stone-400">Last: <%= time_ago_in_words(key.last_used_at) %> ago</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium <%= key.active? ? 'bg-green-100 text-green-700' : 'bg-stone-100 text-stone-500' %>">
                  <span class="w-1.5 h-1.5 rounded-full <%= key.active? ? 'bg-green-500' : 'bg-stone-400' %>"></span>
                  <%= key.active? ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td class="px-6 py-4 text-right">
                <div class="flex items-center justify-end gap-2">
                  <%= button_to toggle_active_dashboard_provider_key_path(key, project_id: current_project&.id),
                      method: :post,
                      class: "p-2 rounded-lg hover:bg-stone-100 transition text-stone-500",
                      title: key.active? ? "Deactivate" : "Activate" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= key.active? ? 'M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636' : 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' %>"/>
                    </svg>
                  <% end %>
                  <%= link_to edit_dashboard_provider_key_path(key, project_id: current_project&.id),
                      class: "p-2 rounded-lg hover:bg-stone-100 transition text-stone-500" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>
                  <%= button_to dashboard_provider_key_path(key, project_id: current_project&.id),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this key?" },
                      class: "p-2 rounded-lg hover:bg-red-50 transition text-red-500" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-2xl border border-stone-200 p-8 text-center">
      <svg class="w-12 h-12 mx-auto text-stone-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
      <p class="text-stone-500">No global provider keys configured</p>
      <p class="text-sm text-stone-400 mt-1">Global keys are available to all projects</p>
    </div>
  <% end %>
</div>

