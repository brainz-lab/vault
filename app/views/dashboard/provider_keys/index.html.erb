                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= key.active? ? 'M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636' : 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' %>"/>
                      </svg>
                    <% end %>
                    <%= link_to edit_dashboard_provider_key_path(key, project_id: current_project.id),
                        class: "p-2 rounded-lg hover:bg-stone-100 transition text-stone-500" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>
                    <%= button_to dashboard_provider_key_path(key, project_id: current_project.id),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this key?" },
                        class: "p-2 rounded-lg hover:bg-red-50 transition text-red-500" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="bg-white rounded-2xl border border-stone-200 p-8 text-center">
        <svg class="w-12 h-12 mx-auto text-stone-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        <p class="text-stone-500">No project-specific keys configured</p>
        <p class="text-sm text-stone-400 mt-1">Project keys override global keys for this project</p>
      </div>
    <% end %>
  </div>
<% end %>

<!-- How it works -->
<div class="mt-8 bg-orange-50 rounded-2xl p-6 border border-orange-100">
  <h3 class="font-medium text-orange-900 mb-2">How Provider Keys Work</h3>
  <ul class="text-sm text-orange-800 space-y-2">
    <li><strong>Global Keys:</strong> Available to all projects. Use for shared API keys.</li>
    <li><strong>Project Keys:</strong> Override global keys for specific projects. Use for project-specific billing or limits.</li>
    <li><strong>Resolution Order:</strong> Project keys take priority over global keys for the same provider.</li>
    <li><strong>API Access:</strong> Other services can fetch keys via <code class="bg-orange-100 px-1 rounded">GET /api/v1/provider_keys/resolve?provider=openai</code></li>
  </ul>
</div>
